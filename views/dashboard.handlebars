<div class="row">
    <div class="text-center mx-auto pt-2 user-name">
        {{!-- User's name, to cusotmize their dashboard --}}
        <h2 id="blogName">{{name}}'s Blog Entries</h2>
    </div>
</div>
<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-10 mx-auto text-left mt-5">
                {{!-- Display all blog posts if there are any, at length --}}
                {{#if blogPosts.length}}
                {{!-- Display each blog post, putting in the dashboard partial --}}
                    {{#each blogPosts as |blogPost|}}
                        {{> dashboardPost blogPost}}
                        <br />
                    {{/each}}
                {{/if}}
            </div>
        </div>
    </div>
    {{!-- If user is logged in, allow them to add new post --}}
    {{#if (is_my_page user.id userId)}}
    <div class="container">
        <div class="row text-center">
            <a href="/create"><button class="btn btn-dark mt-3">Add New Post</button></a>
            <br /><br /><br /><br /><br />
        </div>
    </div>
    {{else}}
    <div class="container">
        <div class="row justify-content-center">
            <p>No posts have been created yet.</p>
        </div>
    </div>
    {{/if}}
</div>
{{!-- JS functionality for the dashboard --}}
<script src="/js/dashboard.js"></script>