<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Login</h2>
            <form action="" class="form login-form">
                <div class="form-group mb-2">
                    <label for="email-login" class="form-label">Email:</label>
                    <input type="text" class="form-control" id="email-login" />
                </div>
                <div class="form-group mb-2">
                    <label for="password-login" class="form-label">Password:</label>
                    <input type="password" class="form-control" id="password-login">
                </div>
                <div class="form-group">
                    <button class="btn btn-dark" type="submit">Login</button>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <h2>Signup</h2>
            <form action="" class="form signup-form">
                <div class="form-group mb-2">
                    <label for="name-signup">Name:</label>
                    <input type="text" class="form-control" id="name-signup" />
                </div>
                <div class="form-group mb-2">
                    <label for="email-signup">Email:</label>
                    <input type="text" class="form-control" id="email-signup" />
                </div>
                <div class="form-group mb-2">
                    <label for="password-signup">Password:</label>
                    <input type="password" class="form-control" id="password-signup" />
                </div>
                <div class="form-group">
                    <button class="btn btn-dark" type="submit">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="../public/js/login.js"></script>