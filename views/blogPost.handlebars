<div class="container">
    <div class="row">
        <div class="card text-dark shadow mb-3 blogPost-main">
            <div class="text-center mx-auto p-3">
                <h2>{{title}}</h2>
                <p class="created-by">Created by {{user.name}} on {{format_date date_created}}</p>
                <p class="blog-description">{{description}}</p>
                {{!-- {{#if (is_my_page user.id userId)}}
                <button class="btn btn-dark" id="editBtn">Edit</button>
                <button class="btn btn-dark" id="deleteBtn">Delete</button>
                {{else}}
                <p>nothing</p>
                {{/if}} --}}
            </div>
            <div class="text-center">
                <h3>Comments</h3>
                {{#each comments as |comment|}}
                <div>
                    <p class="comments">{{comment.comment_body}} by {{comment.user.name}} on {{format_date comment.date_created}}</p>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

{{> comment-form}}

<script src="/js/newComment.js"></script>
<script src="/js/deleteBlogPost.js"></script>
<script src="/js/editBlogPost.js"></script>